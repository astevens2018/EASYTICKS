<div class="container">
  <div class="ticket-container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
      <h5 class="text-center"> <i class="fas fa-mobile-alt"></i> <b>Step 2: Code verification</b></h5>
      <br>
      <p class="text-center">We have sent a SMS to the phone number you have provided, please insert the token code below.</p>
        <%= form_tag verify_path do %>
          <div class="form-group">
            <%= label_tag :code, "" %>
            <%= text_field_tag :token, '', class: "form-control" %>
          </div>
          <div class="phone-buttons">
          <button type="submit" class="verified-button"><i class="fas fa-check"></i> Verify code</button>
        <% end %>

        <%= form_tag resend_path do %>
          <button type="submit" class="btn btn-secondary"><i class="fas fa-recycle"></i> Resend code</button>
        <% end %>
      </div>
      </div>
    </div>
  </div>
</div>
