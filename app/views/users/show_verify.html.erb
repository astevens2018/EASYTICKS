<div class="container">
  <div class="ticket-container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">

      <h4 class="text-center ">Account Verification</h4>
      <h5 class="text-center ">Step 2: Insert verification code</h5>
        <p> Please enter the verification code we just sent to your phone.</p>
        <%= form_tag verify_path do %>
          <div class="form-group">
            <%= label_tag :code, "Verification Code:" %>
            <%= text_field_tag :token, '', class: "form-control" %>
          </div>
          <button type="submit" class="btn btn-primary">Verify Token</button>
        <% end %>

        <%= form_tag resend_path do %>
          <button type="submit" class="btn btn-secondary">Resend code</button>
        <% end %>

      </div>
    </div>
  </div>
</div>
