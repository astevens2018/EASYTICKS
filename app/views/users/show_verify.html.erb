<div class="container">
  <div class="ticket-container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
      <h5 class="text-center "> <i class="far fa-check-circle"></i> <b>Step 2: Token verification</b></h5>
      <p>We have sent a SMS to the phone number you have provided, please insert the token code below.</p>
        <%= form_tag verify_path do %>
          <div class="form-group">
            <%= label_tag :code, "Insert token number" %>
            <%= text_field_tag :token, '', class: "form-control" %>
          </div>
          <div class="phone-buttons">
          <button type="submit" class="btn btn-primary">Verify Code</button>
        <% end %>

        <%= form_tag resend_path do %>
          <button type="submit" class="btn btn-secondary">Resend code</button>
        <% end %>
      </div>
      </div>
    </div>
  </div>
</div>
