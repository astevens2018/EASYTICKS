
<div class="profile-header-wrapper">
    <div class="container profile-header-container text-center">
      <div class="profile-header-infos">

          <img src="<%= @avatar_url %>" alt="">
       <h1><%= current_user.first_name %></h1>
        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
           Edit Details
        </button>

        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Edit Details</h4>
              </div>
              <div class="modal-body">
                ...
                <%= simple_form_for(current_user) do |f| %>
                  <!-- [...] -->
                  <%= f.input :phone %>
                  <%= f.input :first_name %>
                  <%= f.input :last_name %>
                  <%= f.input :photo %>
                  <%= f.input :photo_cache, as: :hidden %>
                  <%= f.button :submit %>
                  <!-- [...] -->
                <% end %>

              </div>

            </div>
          </div>
        </div>
        <div class="container if_verified">
        <p>Account Status: <% if current_user.verified? %> ✅ Verified<% else -%>Not Verified<% end -%>
        <% if !current_user.verified? %>
        <p>
          <button type="button" class="btn btn-primary btn-lg"> <%= link_to "Get Verified", validation_path %>
        </p>
      </button>
        <% end -%>
      </div>
        <h2>Sold 12 tickets</h2>

      </div>
      <ul class="nav nav-tabs tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active tab" id="buy-tab" data-toggle="tab" href="#buy" role="tab" aria-controls="buy" aria-selected="false">
            <h3>Buy</h3>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link tab" id="sell-tab" data-toggle="tab" href="#sell" role="tab" aria-controls="sell" aria-selected="false">
            <h3>Sell</h3>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link tab" id="request-tab" data-toggle="tab" href="#request" role="tab" aria-controls="request" aria-selected="false">
            <h3>Request</h3>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link tab" id="report-tab" data-toggle="tab" href="#report" role="tab" aria-controls="report" aria-selected="false">
            <h3>Report</h3>
          </a>
        </li>
      </ul>

    </div>
  </div>

  <div class="wrapper">
    <div class="container">
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="buy" role="tabpanel" aria-labelledby="buy-tab">Buy</div>
        <div class="tab-pane fade" id="sell" role="tabpanel" aria-labelledby="sell-tab">Sell</div>
        <div class="tab-pane fade" id="request" role="tabpanel" aria-labelledby="request-tab">Request</div>
        <div class="tab-pane fade" id="report" role="tabpanel" aria-labelledby="report-tab">Report</div>
      </div>

      <% @tickets.each do |ticket| %>
        <div class="card">
          <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
          <a class="card-link" href="#"></a>
          <div class="card-description">
            <h2>
              <%= ticket.seller.first_name %>
                <%= ticket.seller.last_name.chars.first %>.</h2>
            <p class="verified">
              <i class="fas fa-user-check"></i> Verified</p>
          </div>
          <div class="card-description destination">
            <h2>
              <%= ticket.departing_city %> →
                <%= ticket.arrival_city %>
            </h2>
            <p class="grey-text">○ London central station</p>
            <p class="grey-text">○ Paris central station</p>
          </div>
          <div class="card-description date">
            <h5>
              <%= ticket.date %>
            </h5>
          </div>
          <div class="card-description price">
            <h5 id="ticket-price">
              <%= ticket.price_cents %>
                <span id="euro">€</span>
            </h5>
          </div>
          <a href="#" class="card-category btn-treehouse">Buy now</a>
        </div>
        <% end %>
    </div>

</div>

  </div>

</body>

</html>

