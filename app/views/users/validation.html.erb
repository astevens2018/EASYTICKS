<div class="container">
  <div class="ticket-container">
    <div class="row">
      <h4 class="text-center ">Account Verification</h4>
      <div class="col-md-offset-3 col-md-6">
        <%= form_for(current_user, url: create_validation_path, method: "post") do |f| %>
          <div class="form-group ">
            <%= f.label :first_name, "First Name " %>
              <%= f.text_field :first_name, class: "form-control ", placeholder: "#{current_user.first_name} " %>
          </div>
          <div class="form-group ">
            <%= f.label :last_name, "Last Name " %>
              <%= f.text_field :last_name, class: "form-control ", placeholder: "#{current_user.last_name} " %>
          </div>
          <div class="form-group ">
            <%= f.label :country_code, "Country Code" %>
              <%= f.text_field :country_code, class: "form-control", id: "authy-countries", placeholder: "Eg. 49" %>
          </div>
          <div class="form-group">
            <%= f.label :phone %>
              <%= f.text_field :phone, class: "form-control", id: "authy-cellphone", placeholder: "17621483811" %>
          </div>
          <%= f.hidden_field :id, :value => current_user.id %>
          <button class="verified-button">Get Verified</button>
          <% end -%>
            <% if current_user.errors.any? %>
              <h2>Oops, something went wrong!</h2>
              <ul>
                <% current_user.errors.full_messages.each do |error| %>
                  <li>
                    <%= error %>
                  </li>
                  <% end -%>
              </ul>
              <% end -%>
      </div>
    </div>
  </div>
</div>

