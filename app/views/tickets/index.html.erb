<div class="wrapper">

  <div class="search_form_index">
   <%= form_tag tickets_path, method: :get do %>
       <%= hidden_field_tag 'ticket' %>
        <%= select_tag "departing_city", options_for_select([ "London", "Paris", "Brussels", "Amsterdam" ], params[:departing_city] ? params[:departing_city] : "From"), prompt: "From", required: true %>
          <%= select_tag "arrival_city", options_for_select([ "Paris", "Brussels", "London", "Amsterdam" ], params[:arrival_city] ? params[:arrival_city] : "To"), prompt: "To", required: true %>
            <%= text_field_tag :date, nil, required: true, id: "datepicker-input", placeholder: params[:date] ? params[:date] : "Departing at              ðŸ“…"%>
              <%= submit_tag 'Search', class: "form_submit" %>
                <% end %>

                <%= javascript_pack_tag 'datepicker' %>


                  <div class="container">
                    <% @tickets.each do |ticket| %>
                      <% if ticket.buyer_id == nil %>
                        <%= link_to ticket_path(ticket) do %>
                          <div class="card">
                            <div class="card-user">
                            <%= image_tag ticket.seller.avatar_url  %>
                          </div>
                          <div class="card-description">
                              <h2>
                                <%= ticket.seller.first_name %>
                                  <%= ticket.seller.last_name.chars.first %>.</h2>
                              <p class="verified">
                                <% if ticket.seller.verified? %>
                              </p>
                                <i class="fas fa-user-check"></i> verified
                              </p>
                               <% else -%>
                            <% end -%>
                              <% if !ticket.seller.verified? %>
                            <p>
                                <i class="fas fa-times"></i></i> seller not verified
                              </p>
                              <% end %>

                            </div>
                            <div class="card-description destination">
                              <h2>
                                <%= ticket.departing_city %> â†’
                                  <%= ticket.arrival_city %>
                              </h2>
                              <p class="grey-text">â—‹ London central station</p>
                              <p class="grey-text">â—‹ Paris central station</p>
                            </div>
                            <div class="card-description date">
                              <h5>
                                <%= ticket.date.strftime("%d %B %Y") %>
                              </h5>
                            </div>
                            <div class="card-description time">
                              <h5>
                                <%= ticket.date.strftime("%I:%M%p") %>
                              </h5>
                            </div>
                            <div class="card-description price">
                              <h5 id="ticket-price">
                                <%= humanized_money_with_symbol(ticket.price) %>
                              </h5>
                            </div>
                            <div class="card-category btn-treehouse">
                              <%= link_to 'Buy', ticket_path(ticket) %>
                            </div>
                          </div>
                          <% end %>
                            <% end %>
                              <% end %>
                              <br>
                              <% if @tickets.length == 0  %>
                                <%= link_to "No tickets available for your choice, make another search or click here to get notified once a ticket shows up", dashboard_path %>
                                    <% end %>

                  </div>
  </div>
</div>
