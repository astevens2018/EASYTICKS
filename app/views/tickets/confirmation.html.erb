<div class="animation">
  <div class="wrapper-train">
    <div class="background-train"></div>
    <div class="rocks_1"></div>
    <div class="rocks_2"></div>
    <div class="rails"></div>
    <div class="train"></div>
    <div class="ground"></div>
    <div class="lights"></div>
    <div class="moon"></div>
  </div>
</div>

<div class="wrapper">
  <div class="container confirmation-container">
    <div class="row">
      <div class="col-sm-offset-3 col-sm-6 text-center">
        <h3>
          <strong class="lighter">Welcome on board!</strong>
        </h3>
      </div>
      <div class="col-sm-offset-3 col-sm-3">
        <p>Name on ticket:
          <%= @ticket.name_on_ticket %>
        </p>
      </div>
      <div class="col-sm-offset-0 col-sm-3">
        <p> Booking reference:
          <%= @ticket.booking_reference %>
        </p>
      </div>
      <div class="col-sm-offset-3 col-sm-3">
        <p>
          <i class="far fa-calendar-alt"></i>
          <%= @ticket.date %>
        </p>
      </div>
      <div class="col-sm-offset-0 col-sm-3">
        <p>
          <i class="far fa-clock"></i>
          <span class="lighter">Departs: <%= @ticket.date.strftime("%d %B %Y") %></span>
        </p>
      </div>
      <div class="col-sm-offset-0 col-sm-3">
        <p>
          <i class="fas fa-euro-sign"></i>
          <%= @ticket.price %>
        </p>
      </div>
      <div class="col-sm-offset-3 col-sm-6 text-center">
        <a id="download_button" href="https://tickets.eurostar.com/tickets/SQMBOF/7133c742-06b1-40c4-8d64-b8f34b6dba20.pdf?response-content-type=application%2Fpdf&AWSAccessKeyId=AKIAIS4OAMU4IZGEPEAQ&Expires=1531849140&Signature=K%2FYJ%2FaE6jzBx3eKAy5a6Bvt5ycM%3D"
        download>
        <i class="fas fa-download"></i> Download your ticket </a>
      </div>
    </div>
  </div>
</div>